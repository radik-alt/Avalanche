<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.BuyAvax">

    <LinearLayout
        android:id="@+id/topInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:orientation="vertical"
        android:paddingBottom="10sp">

        <GridLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:layout_marginBottom="15sp"
            android:columnCount="2"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25sp"
                    android:background="@color/primaryColor"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:text="Back to Home"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="25sp"
                android:src="@drawable/ic_logo" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cash available"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.53 "
                    android:textColor="@color/twoPrimaryColor"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVAX"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="$ 453.37"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_below="@id/topInfo"
            android:background="@color/primaryColor"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <GridLayout
            android:layout_below="@id/topInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="@drawable/registr_input"
            android:columnCount="1"
            android:rowCount="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                app:cardCornerRadius="20dp"
                app:contentPadding="15sp">


                <LinearLayout
                    android:id="@+id/sendAvax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUY "
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AVAX"
                        android:textColor="@color/twoPrimaryColor"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60sp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="50sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_logowhitesloy" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="10sp"
                        android:inputType="number"
                        android:gravity="left"
                        android:text="@string/buyScreenStrpOne"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60sp">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:paddingTop="10sp"
                            android:paddingBottom="10sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="10sp"
                            android:background="@drawable/btnonehome"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_marginBottom="5sp"
                                android:gravity="left"
                                android:text="AVAX"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/avaxBallBuy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_file"
                            android:gravity="right|center_vertical"
                            android:hint="0.00"
                            android:textSize="22sp"
                            android:inputType="numberDecimal"
                            android:paddingRight="10sp"
                            android:paddingLeft="10sp"/>

                    </LinearLayout>
<!--                    <EditText-->
<!--                        android:layout_marginTop="5sp"-->
<!--                        android:id="@+id/avaxBall"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="50sp"-->
<!--                        android:background="@drawable/input_card"-->
<!--                        android:gravity="right|center_vertical"-->
<!--                        android:hint="0.00"-->
<!--                        android:textSize="22sp"-->
<!--                        android:inputType="numberDecimal"-->
<!--                        android:paddingRight="10sp"-->
<!--                        android:paddingLeft="10sp"/>-->

                    <TextView
                        android:id="@+id/warringBuyOne"
                        android:paddingTop="5sp"
                        android:paddingLeft="10sp"
                        android:visibility="invisible"
                        android:textColor="@color/wrong"
                        android:text="Cannot be left blank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="10sp"
                        android:gravity="left"
                        android:text="@string/buyScreenStrpTwo"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/card"
                            android:layout_weight="1"
                            android:layout_marginRight="5sp"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:background="@drawable/input_card"
                            android:hint="Card Number"
                            android:inputType="number"
                            android:maxLines="5"
                            android:textSize="14sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp" />

                        <EditText
                            android:id="@+id/date"
                            android:layout_width="80sp"
                            android:layout_height="50sp"
                            android:background="@drawable/input_card"
                            android:hint="Expiry Date"
                            android:inputType="number"
                            android:maxLines="5"
                            android:layout_marginRight="5sp"
                            android:textSize="14sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp" />

                        <EditText
                            android:id="@+id/CVS"
                            android:layout_width="80sp"
                            android:layout_height="50sp"
                            android:background="@drawable/input_card"
                            android:hint="CVV"
                            android:inputType="number"
                            android:maxLines="5"
                            android:textSize="14sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/warringBuyTwo"
                        android:layout_gravity="left"
                        android:paddingTop="5sp"
                        android:paddingLeft="10sp"
                        android:visibility="invisible"
                        android:textColor="@color/wrong"
                        android:text="Incorrect Card Details\nEnter card details properly and try again"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/clickIntentPrivate"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="30sp"
                        android:layout_marginRight="30sp"
                        android:background="@drawable/ic_btnview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ProgressBar
                                android:visibility="invisible"
                                android:id="@+id/progressPrivet"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/textIntnetPrivet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="BUY"
                                android:textColor="@color/white"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                        </RelativeLayout>


                    </LinearLayout>
<!--                    <Button-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="20sp"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:layout_width="250sp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_marginTop="25sp"-->
<!--                        android:background="@drawable/ic_btnview"-->
<!--                        android:text="BUY" />-->

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </GridLayout>


</RelativeLayout>