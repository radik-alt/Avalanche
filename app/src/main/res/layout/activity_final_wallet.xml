<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".OpenWallet.FinalWallet">





    <LinearLayout
        android:layout_marginTop="50sp"
        android:orientation="vertical"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_marginTop="70sp"
            android:src="@drawable/ic_logotwo" />

        <TextView
            android:layout_marginTop="100sp"
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="SAFE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/montserrat_extrabold"
            android:textColor="@color/twoPrimaryColor"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="MONEY,"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/montserrat_extrabold"
            android:text="HAPPY YOU!"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80sp"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/startedAccount"
            android:layout_width="wrap_content"
            android:text="create account"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_btnview" />

        <LinearLayout
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:text="Already Have An Account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/singin"
                android:layout_marginLeft="5sp"
                android:textColor="@color/twoPrimaryColor"
                android:text="@string/Import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>