<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".Home.FinishBuy">

    <ImageView
        android:id="@+id/dollar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textScreen"
        android:src="@drawable/payment" />


    <LinearLayout
        android:id="@+id/textScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="50sp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/headText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dollar"
            android:gravity="center"
            android:text="money sent"
            android:textColor="@color/twoPrimaryColor"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headText"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="We have just sent your deposit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100sp"
        android:gravity="right"
        android:paddingRight="30sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="25sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Back to home"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/clickIntent"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_clicknext"/>


    </LinearLayout>

</RelativeLayout>