<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".OpenWallet.FinalWallet">

    <LinearLayout
        android:id="@+id/headText"
        android:orientation="horizontal"
        android:layout_margin="20sp"
        android:paddingTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="SAFE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/twoPrimaryColor"
                android:textSize="40sp"
                android:textStyle="bold"
                android:text="MONEY,"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="HAPPY YOU!"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:src="@drawable/ic_logotwo" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/headText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/startedAccount"
            android:layout_width="wrap_content"
            android:text="GET STARTED"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_btnview" />

        <LinearLayout
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:text="Already Have An Account?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/singin"
                android:layout_marginLeft="5sp"
                android:textColor="@color/twoPrimaryColor"
                android:text="@string/Import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>